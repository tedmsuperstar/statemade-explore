{
  "compilerOptions": {
    "target": "ES2019",                   // Target ECMAScript version
    "module": "NodeNext",  // Use ECMAScript modules 
    "moduleResolution": "nodenext",
    "outDir": "./dist",                    // Output directory for compiled JS files
    "strict": true,                        // Enable strict type-checking options
    "esModuleInterop": true,               // Interoperability for ES6 imports
    "skipLibCheck": true,                  // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]                    // Include Node.js types
  },
  "include": ["./**/*"]
}